<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hackyle.blog.admin.module.article.mapper.AuthorMapper">

    <select id="countAuthorArticle" resultType="java.lang.Integer">
        SELECT count(1)
        FROM article_author_relation
        WHERE author_id IN
        <foreach collection="idSet" index="id" item="item" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


</mapper>
