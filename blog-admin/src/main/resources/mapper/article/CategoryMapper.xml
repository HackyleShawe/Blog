<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hackyle.blog.admin.module.article.mapper.CategoryMapper">
    <select id="countCategoryArticle" resultType="java.lang.Integer">
        SELECT count(1)
        FROM article_category_relation
        WHERE category_id IN
        <foreach collection="idSet" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


</mapper>
